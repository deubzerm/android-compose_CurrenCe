<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.deubzer.app.currence">

    <application
        android:name=".CurrenCeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_currence_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_currence_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CurrenCe"
        tools:targetApi="31">
        <activity
            android:name="net.deubzer.app.currence.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CurrenCe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>